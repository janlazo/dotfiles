root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
tab_width = 8
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
# Github Flavored Markdown
# 2+ trailing spaces create a newline
indent_size = 4
trim_trailing_whitespace = false

[{*.ps1,*.cs}]
indent_size = 4

[.gitconfig]
indent_style = tab
indent_size = 8
